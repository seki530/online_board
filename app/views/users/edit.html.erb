<body>

 <main>
  
 <%= form_with model: @user, url: user_path ,method: :PATCH do |f| %>
 
 
 <div class="box">
   <h5>ユーザーネーム</h5>
   <%= f.text_field :name %><br>
 </div>
  
 <div class="box">
   <h5>よく使うエージェント</h5>
   <%= f.text_field :agent %><br>
 </div>
   
 <div class="box">
   <h5>ランク</h5>
    <%= f.text_field :rank %><br>
 </div>
 
 <div class="actions">
  <%= f.submit '変更', class: "glyphicon glyphicon-pencil btn btn-success" %>
 </div>
 
 <% end %>

 </main>
</body>